- var headerimg = theme.header.backgroundimg && theme.header.backgroundimg.length > 0

if headerimg

	- var attrs = {'data-num-img': theme.header.backgroundimg.length}
	- theme.header.backgroundimg.forEach(function(val, idx) { var c = idx+1; attrs["data-img-src-"+c]=url_for(val.src); attrs["data-img-desc-"+c]=val.desc;})
	#header-big-imgs&attributes(attrs)

header.header-section(class={ 'has-img' : headerimg })
	.intro-header(class=headerimg? 'big-img' : 'no-img')
		.container
			.row
				.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
						.page-heading
							h1!= theme.header.title
							hr.small
							span.page-subheading!= theme.header.motto
		span.img-desc